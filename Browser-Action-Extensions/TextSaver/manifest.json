{
  "manifest_version": 2,
  "name": "TextSaver",
  "version": "1.0",
  "description": "Enregistre des chaînes de caractères que vous pourrez ensuite copier, supprimer et trier.",
  "icons":{
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "browser_action":{
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "scripts": ["eventPage.js"],
    "persistent":false
  },
  "permissions":[
    "storage",
    "notifications",
    "contextMenus"
  ]
}
